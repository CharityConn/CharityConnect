{
	"name": "tokenscript",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run build:ts",
		"build:ts": "tokenscript build && pnpm run copy:ts",
		"copy:ts": "cp out/tokenscript.tsml ../frontend/src/assets/tokenscripts/charityconnect-pass.tsml",
		"sign": "tokenscript sign",
		"start": "tokenscript emulate",
		"emulate": "tokenscript emulate",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@tokenscript/card-sdk": "^1.2.0",
		"@tokenscript/cli": "^1.2.0",
		"@types/qrcode": "^1.5.5",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.44",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.4",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.4.10",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-singlefile": "^0.13.5"
	},
	"type": "module",
	"dependencies": {
		"bignumber.js": "^9.1.2",
		"ethers": "^6.13.2",
		"qrcode": "^1.5.4"
	}
}
